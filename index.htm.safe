<html>
<head>
<title>FUDGE Dice Roller</title>
</head>
<body>

<style>
div.die {
   display: inline-block;
   width: 24px;
   border-radius: 5px;
   border: #000 1px solid;
   padding: 3px;
   font-size: 24px;
   font-weight: 900;
   text-align: center;
   margin: 3px;
}
.ivory {
   background-color: #ff9;
   color: #000;
}
.black {
   background-color: #000;
   color: #fff;
}
.blue {
   background-color: #036;
   color: #fff;
}
.red {
   background-color: #f30;
   color: #fff;
}
.white {
   background-color: #fff;
   color: #000;
}
</style>
<script src="//code.jquery.com/jquery-1.12.0.min.js"></script>
<script type="text/javascript">
function rollDice() {
  var dface = "-" + String.fromCharCode(160) + "+"; // "- +"
  var diceTotal = 0;
  var dCookieNum = $('#diceSet').data('num');
  if (dCookieNum == "") {
    dNum = 4;
  } else {
    dNum = Number(dCookieNum);
  }
  $('.die').each(function() {
    tVal = Math.floor(Math.random() * 3) - 1;
    diceTotal = diceTotal + tVal;
    $(this).html(dface.substr((tVal+1),1));
  });
  var status = document.getElementById("status");
  switch (diceTotal) {
    case -5:
    case -4:
      $('#status').html('You rolled below Terrrible ('+diceTotal+').');
      break;
    case -3:
      $('#status').html('You rolled Terrrible ('+diceTotal+').');
      break;
    case -2:
      $('#status').html('You rolled Poor ('+diceTotal+').');
      break;
    case -1:
      $('#status').html('You rolled Mediocre ('+diceTotal+').');
      break;
    case 0:
      $('#status').html('You rolled Fair ('+diceTotal+').');
      break;
    case 1:
      $('#status').html('You rolled Good ('+diceTotal+').');
      break;
    case 2:
      $('#status').html('You rolled Great ('+diceTotal+').');
      break;
    case 3:
      $('#status').html('You rolled Superb ('+diceTotal+').');
      break;
    case 4:
    case 5:
      $('#status').html('You rolled beyond Superb ('+diceTotal+').');
      break;
  } 
}

function diceColor(pColor) {
  $('#diceSet').data('color', pColor);
  $('.die').removeClass("ivory black blue red white");
  switch (pColor) {
    case 1:
      $('.die').addClass('ivory');
      break;
    case 2:
      $('.die').addClass('black');
      break;
    case 3:
      $('.die').addClass('blue');
      break;
    case 4:
      $('.die').addClass('red');
      break;
    case 5:
      $('.die').addClass('white');
      break;
  }
}
function makeDice(pNum) {
  $('#diceSet').data('num', pNum);
  $('#diceSet').html('');
  for (i = 1; i <= pNum; i++) {
    $('#diceSet').append('<div id="die' + i.toString() + '" class="die">&nbsp;</div>');
  }
}

</script>
<div id="diceSet" class="diceSet"></div>
<button id="roll">Roll Dice</button>
<div id="status"></div>
<button id="tabShow">Settings...</button>
<div id="AdvTab" style="display: none;">
   Color:&nbsp;<button class="diceColor" style="background-color: #ff9;" onclick="diceColor(1)"></button>
   <button class="diceColor" style="background-color: black;" onclick="diceColor(2)"></button>
   <button class="diceColor" style="background-color: blue;" onclick="diceColor(3)"></button>
   <button class="diceColor" style="background-color: red;" onclick="diceColor(4)"></button>
   <button class="diceColor" style="background-color: white;" onclick="diceColor(5)"></button>
   <br>
   Number:&nbsp;<button class="diceNum">1</button>
   <button class="diceNum">2</button>
   <button class="diceNum" >3</button>
   <button class="diceNum">4</button>
   <button class="diceNum" >5</button>
   <br>
   <button id="tabHide">Done</button>
</div>

<script type="text/javascript"> 
   $(document).ready(function() {
      $('#diceSet').data('color', 5);
      $('#diceSet').data('num', 4);
      makeDice($('#diceSet').data('num'));
      diceColor($('#diceSet').data('color'));
      rollDice();

      $('#roll').click(function(){rollDice()});
      $('#tabShow').click(function(){$('#AdvTab').show();});
      $('#tabHide').click(function(){$('#AdvTab').hide();});
      $('.diceNum').click(function(){
         makeDice($(this).text());
         diceColor($('#diceSet').data('color'));
         rollDice();
      });
   });
</script>





</body>
</html>